[core]
  editor = nvim
  autocrlf = input
[init]
  defaultBranch = main
[alias]
  ci = commit
  co = checkout
  ff = pull --ff-only
  get = fetch --all --tags --prune
  p = push --set-upstream origin HEAD
  staged = diff --staged
  amend = commit --amend --no-edit
  wip = !git add -A && git commit -m 'WIP'
  unwip = reset --soft HEAD^
  mktags = !.git/hooks/ctags
[url "https://github.com/"]
  insteadOf = hub:
